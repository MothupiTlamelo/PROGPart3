@model SystemClaim.Models.Claims

@{
    ViewData["Title"] = "Claim Details";
}

<h2>Claim Details</h2>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Surname</dt>
        <dd class="col-sm-9">@Model.Surname</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Model.Department</dd>

        <dt class="col-sm-3">Rate Per Job</dt>
        <dd class="col-sm-9">@Model.RatePerJob.ToString("F2")</dd>

        <dt class="col-sm-3">Number of Jobs</dt>
        <dd class="col-sm-9">@Model.NumberOfJobs</dd>

        <dt class="col-sm-3">Total Amount</dt>
        <dd class="col-sm-9">@Model.TotalAmount.ToString("F2")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

  
    <h4 class="mt-4">Uploaded Documents</h4>

    @if (Model.Documents != null && Model.Documents.Any())
    {
        <table class="table table-bordered mt-2">
            <thead class="table-light">
                <tr>
                    <th>File Name</th>
                    <th>Uploaded On</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in Model.Documents)
                {
                    <tr>
                        <td>@doc.FileName</td>
                        <td>@doc.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a href="@doc.FilePath" target="_blank" class="btn btn-sm btn-primary">
                                View / Download
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No documents uploaded for this claim.</p>
    }
    <!-- ============================================================================== -->

    <div class="mt-3">
      
        <a asp-action="Claims" class="btn btn-secondary">Back to Claims</a>
    </div>
</div>
