@model Claims

<h2>Create Work Claim</h2>

<form asp-controller="Claims" asp-action="CreateClaim" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Surname</label>
        <input asp-for="Surname" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Department</label>
        <input asp-for="Department" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Rate Per Job</label>
        <input asp-for="RatePerJob" id="ratePerJob" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Number of Jobs</label>
        <input asp-for="NumberOfJobs" id="numberOfJobs" class="form-control" />
        <span asp-validation-for="NumberOfJobs" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Total Amount</label>
        <input id="totalAmountDisplay" class="form-control" readonly />
        <input asp-for="TotalAmount" id="totalAmountHidden" type="hidden" />
    </div>

    <!-- Hidden fields so model binding passes -->
    <input asp-for="WorkerUserId" type="hidden" />
    <input asp-for="Status" type="hidden" />

    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const rateInput = document.getElementById("ratePerJob");
        const jobsInput = document.getElementById("numberOfJobs");
        const totalDisplay = document.getElementById("totalAmountDisplay");
        const totalHidden = document.getElementById("totalAmountHidden");

        function calculateTotal() {
            const rate = parseFloat(rateInput.value);
            const jobs = parseInt(jobsInput.value);

            if (isNaN(rate) || isNaN(jobs) || jobs < 1) {
                totalDisplay.value = "";
                totalHidden.value = 0;
                return;
            }

            const total = rate * jobs;
            totalDisplay.value = total.toFixed(2);
            totalHidden.value = total;
        }

        jobsInput.addEventListener("input", calculateTotal);

        calculateTotal();
    </script>
}
