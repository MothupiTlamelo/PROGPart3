@model IEnumerable<SystemClaim.Models.Claims>

@{
    ViewData["Title"] = "My Claims";
}

<h2>My Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Department</th>
            <th>Rate per Job (R)</th>
            <th>Jobs</th>
            <th>Total (R)</th>
            <th>Status</th>
            <th>Reject Reason</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@claim.Department</td>
                <td>@claim.RatePerJob.ToString("F2")</td>
                <td>@claim.NumberOfJobs</td>
                <td>@claim.TotalAmount.ToString("F2")</td>
                <td>@claim.Status</td>
                <td>@claim.RejectReason</td>
                <td>
                    <a asp-action="ViewClaims" asp-route-id="@claim.Id" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateClaim" class="btn btn-primary mt-3">Create New Claim</a>
