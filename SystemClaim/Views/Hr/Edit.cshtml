@model SystemClaim.Models.RegisterViewModel

@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Department"></label>
        <input asp-for="Department" class="form-control" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DefaultRatePerJob"></label>
        <input asp-for="DefaultRatePerJob" class="form-control" />
        <span asp-validation-for="DefaultRatePerJob" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoleName"></label>
            <select asp-for="RoleName" class="form-control">
                <option value="Lecturer">Lecturer</option>
                <option value="Coordinator">Coordinator</option>
                <option value="Manager">Manager</option>
                <option value="HR">HR</option>
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="HrDashboard" class="btn btn-secondary">Back to Dashboard</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
