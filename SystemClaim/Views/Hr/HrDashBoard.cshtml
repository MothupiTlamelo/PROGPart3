@model IEnumerable<SystemClaim.Models.User>

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>HR Dashboard</h2>
    <a asp-action="HrExportCsv" class="btn btn-success">Generate Report</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Department</th>
            <th>Role</th>
            <th>Default Rate</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Surname</td>
                <td>@emp.Department</td>
                <td>@emp.RoleName</td>
                <td>@emp.Email</td>
              
                <td>@emp.DefaultRatePerJob.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateEmployee" class="btn btn-primary mt-3">Add New Employee</a>
