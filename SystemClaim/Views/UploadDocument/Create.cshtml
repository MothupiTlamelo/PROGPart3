@model SystemClaim.Models.UploadDocument

@{
    ViewData["Title"] = "Upload Document";
}

<h2>Upload Document for Claim @Model.ClaimID</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="ClaimID" />

    <div class="mb-3">
        <label class="form-label">Select File</label>
        <input type="file" name="file" class="form-control" />
        <span class="text-danger">@Html.ValidationMessage("")</span>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
    <a class="btn btn-secondary" href="@Url.Action("List", new { claimId = Model.ClaimID })">Cancel</a>
</form>
