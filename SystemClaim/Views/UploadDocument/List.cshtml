@model IEnumerable<SystemClaim.Models.UploadDocument>

@{
    ViewData["Title"] = "Uploaded Documents";
    int claimId = ViewBag.ClaimId;
}

<h2>Documents for Claim @claimId</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "UploadDocument", new { claimId = claimId })">
        Upload New Document
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Upload Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.FileName</td>
                <td>@doc.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = doc.DocumentID })">Details</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = doc.DocumentID })">Delete</a>
                    <a class="btn btn-success btn-sm" href="@doc.FilePath" target="_blank">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>
